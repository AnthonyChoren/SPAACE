
<%= simple_form_for [@flat] do |f| %>
  <%= f.input :name %>
  <%= f.input :planet %>
  <%= f.input :capacity %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.submit "Add a flat", class: "btn btn-primary" %>
<% end %>
<br><br>
<%= link_to "Back home", flats_path, class: "btn btn-primary" %>
