<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <%= simple_form_for [@flat] do |f| %>
      <%= f.input :planet, collection: ["Mercury", "Moon", "Venus","Earth","Mars","Jupiter","Saturn","Uranus","Neptune"]  %>
      <%= f.input :name %>
      <%= f.input :capacity %>
      <%= f.input :description%>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Add a flat", class: "btn btn-dark" %>
      <%= link_to "Back home", flats_path, class: "btn btn-dark" %>
      <% end %>
    </div>
  </div>
</div>
