<div class="card m-4">
  <%= cl_image_tag @booking.flat.photo.key, height: 200, crop: :fill, class: "card-img-top border_img" %>
  <!-- add the cloudanary img -->
  <div class="card-body p-3">
    <h5 class="card-title">You booked the flat "<%= @booking.flat.name %>"! </h5>
    <p class="card-text">Congratulations! You have booked your own space apartment from <%= @booking[:start_time] %> to <%= @booking[:end_time] %>.</p>
  </div>
</div>
<div class="d-flex justify-content-center" >
  <%= link_to "Cancel reservation", flat_booking_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-dark m-2"  %>
  <!-- /flats/:flat_id/bookings/:id(.:format) -->

  <%= link_to "View all my reservations", flat_bookings_path, class: "btn btn-dark m-2"  %>

  <%= link_to "Back home", flats_path, class: "btn btn-dark m-2" %>
</div>


