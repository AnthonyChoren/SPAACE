<div class="card m-4">
  <img src="nicolas-lobos-kGtFjYdm7DI-unsplash.jpg"  class="card-img-top" style="height: 200px;" alt="">
  <!-- add the cloudanary img -->
  <div class="card-body p-3">
    <h5 class="card-title">Booking infos of <%= current_user["first_name"] %>  <%= current_user["last_name"] %> </h5>
    <p class="card-text">Congratulations! You have booked your own space appartment from <%= @booking[:start_time] %> to <%= @booking[:end_time] %>.</p>
  </div>
</div>
<div class="d-flex justify-content-center" >
  <%= link_to "Cancel reservation", flat_booking_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-dark m-2"  %>
  <!-- /flats/:flat_id/bookings/:id(.:format) -->

  <%= link_to "View all my reservations", flat_bookings_path, class: "btn btn-dark m-2"  %>

  <%= link_to "Back home", flats_path, class: "btn btn-dark m-2" %>
</div>


