<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <%= simple_form_for [@flat] do |f| %>
      <%= f.association :planet  %>
      <%= f.input :name %>
      <%= f.input :capacity %>
      <%= f.input :description%>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Update the flat", class: "btn btn-primary" %>
      <%= link_to "Back home", flats_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
